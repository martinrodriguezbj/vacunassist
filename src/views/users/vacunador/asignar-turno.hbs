<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Solcitar turno</h3>
        </div>
        <div class="card-body">
            <form action="/users/vacunador/asignar-turno/{{id}}" method="POST">

                <label for="vaccineName">Vacuna</label>
                <div class="form group">
                    <select name="vaccineName" required="true" class="">
                        <option value="Covid: dosis 1">Covid: dosis 1</option>
                        <option value="Covid: dosis 2">Covid: dosis 2</option>
                        <option value="Gripe">Gripe</option>
                        <option value="Fiebre Amarilla">Fiebre amarilla</option>
                    </select>
                </div>
                
                <label for="sede">Sede</label>
                <div class="form group">
                    <select name="sede" required="true" class="">
                        <option value="Sede 1">Sede 1</option>
                        <option value="Sede 2">Sede 2</option>
                        <option value="Sede 3">Sede 3</option>
                    </select>
                </div>

                <div class="form group">
                    <button class="btn btn btn-primary block" type="submit">Solicitar</button>
                </div>

            </form>
        </div>
    </div>
</div>