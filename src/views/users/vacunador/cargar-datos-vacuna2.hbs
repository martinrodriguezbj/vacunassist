<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nueva Vacuna</h3>
        </div>
        <div class="card-body">
                <form action="/users/vacunador/cargar-datos-vacuna2/{{paciente._id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">

                    <div class="form group">
                        <p>vacuna colocada</p>
                        <select name="name" class="form-control" required="true">
                            <option>Covid: dosis 1</option>
                            <option>Covid: dosis 2</option>
                            <option>Gripe</option>
                            <option>Fiebre Amarilla</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <p>Fecha de aplicaci√≥n</p>
                    <input type="date" name="date" required="true">
                    </div>
                    <div class="form-group">
                        <p>Marca / Laboratorio</p>
                        <textarea type="text" name="labName"
                            class="form-control" required="true"></textarea>
                    </div>
                    <div class="form-group">
                        <p>Lote nro</p>
                        <textarea type="text" name="lot" class="form-control" required="true"></textarea>
                    </div>
                    <div class="form-group">
                        <p>Nombre del Vacunador</p>
                        <input type="text" name="vaccinator" class="form-control" required="true"></input>
                    </div>
                    <div class="form group">
                        <p>Sede</p>
                        <select name="place" class="form-control" required="true">
                            <option>Sede 1</option>
                            <option>Sede 2</option>
                            <option>Sede 3</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                            Guardar
                        </button>
                    </div>
                </form>
        </div>
    </div>
        <script>
        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!
        var yyyy = today.getFullYear();

        if (dd < 10) {
        dd = '0' + dd;
        }

        if (mm < 10) {
        mm = '0' + mm;
        } 
            
        today = yyyy + '-' + mm + '-' + dd;
        document.getElementById("date").setAttribute("max", today);
    </script>
</div>