<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nueva Vacuna</h3>
        </div>
        <div class="card-body">
            <form action="/users/vacunador/cargar-datos-vacuna/{{newVaccine._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">

                <div class="form-group">
                    <p>Marca / Laboratorio</p>
                    <textarea type="text" name="labName" class="form-control" required>{{newVaccine.labName}}</textarea>
                </div>
                <div class="form-group">
                    <p>Lote nro</p>
                    <textarea type="text" name="lot"
                        class="form-control" required>{{newVaccine.lot}}</textarea>
                </div>
               
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>