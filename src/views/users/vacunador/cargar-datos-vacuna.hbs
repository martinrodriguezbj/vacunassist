<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nueva Vacuna</h3>
        </div>
        <div class="card-body">
            <form action="/users/vacunador/cargar-datos-vacuna/{{newVaccine._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">

                <div class="form group">
                    <p>vacuna colocada</p>
                    <select name="name" class="form-control">{{newVaccine.name}}
                        <option>Covid: dosis 1</option>
                        <option>Covid: dosis 2</option>
                        <option>Gripe</option>
                        <option>Fiebre Amarilla</option>
                    </select>
                </div>
                <div class="form-group">
                    <p>Marca / Laboratorio</p>
                    <textarea type="text" name="labName" class="form-control">{{newVaccine.labName}}</textarea>
                </div>
                <div class="form-group">
                    <p>Lote nro</p>
                    <textarea type="number" min="0" max="50" name="lot"
                        class="form-control">{{newVaccine.lot}}</textarea>
                </div>
                <div class="form-group">
                    <p>Nombre del Vacunador</p>
                    <input type="text" name="vaccinator" class="form-control" value="{{newVaccine.vaccinator}}"></input>
                </div>
                <div class="form group">
                    <p>Sede</p>
                    <select name="place" class="form-control">{{newVaccine.place}}
                        <option>Sede 1</option>
                        <option>Sede 2</option>
                        <option>Sede 3</option>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>