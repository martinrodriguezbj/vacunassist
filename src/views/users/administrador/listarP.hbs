<div>
  <h1></h1>
  <h1></h1>
</div>
<h2>
  <center>Listado de Pacientes</center>
</h2>
{{#if pacientes}}
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido</th>
      <th scope="col">DNI</th>
      <th scope="col">Mail</th>
      <th scope="col">Dirección</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>

    {{#each pacientes}}
    <tr>
      <th>{{name}}</th>
      <th>{{surname}}</th>
      <th>{{dni}}</th>
      <th>{{email}}</th>
      <th>{{address}}</th>
      <th>
        <form action="/vaccines/buscar-vacunas/{{_id}}" method="POST">
          <input type="hidden" name="_method" value="PUT">
          <button class="" type="submit">
            Ver vacunas
          </button>
        </form>
        <h3> </h3>
      </th>
      <th>
        <form action="/users/administrador/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">

          <!-- Button trigger modal -->
          <button type="button" name="boton" value="paciente" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal{{_id}}">
            Eliminar Paciente
          </button>
          <!-- Modal -->
          <div class="modal fade" id="exampleModal{{_id}}" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h3 class="modal-title" style="color:black" id="exampleModalLabel">Está seguro de que desea eliminar
                    el paciente?</h3>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body" style="color:black">
                  {{surname}}, {{name}}
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                  <button type="submit" class="btn btn-danger">Eliminar Paciente</button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </th>
    </tr>
    {{/each}}
    {{else}}
    <center>
      <h1>No hay pacientes para mostrar</h1>
    </center>
    {{/if}}
  </tbody>
</table>