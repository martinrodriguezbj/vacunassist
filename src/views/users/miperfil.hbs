<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Email</th>
      <th scope="col">Fecha de ingreso</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each usuarios}}
    <tr>
            <th>{{name}}</th>
            <th>{{email}}</th>
            <th>{{date}}</th>
            <th>
             <a href="/users/miperfil/edit/{{_id}}">
             <input type="button" value="Modificar datos">
             </a>
             </th>
    </tr>
    {{/each}}
  </tbody>
</table>