<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Registrarse
      </div>
      <div class="card-body">
        <form action="/users/signup" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}" required="true">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="surname" placeholder="Apellido" value="{{surname}}" required="true">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="address" placeholder="Dirección" value="{{address}}" required="true">
          </div>
          <div class="form-group">
            <input type="number" class="form-control" name="dni" placeholder="Dni" value="{{dni}}" required="true">
          </div>
          <div class="form-group">
            <input type="number" class="form-control" name="edad" placeholder="Edad" value="{{edad}}" min="0" max="100" required="true">
          </div>
          <div class="form group">
            <p>¿ES FACTOR DE RIESGO?</p>
            <select name="riesgo" class="" value="{{riesgo}}" required="true">
              <option>Si</option>
              <option>No</option>
            </select>
          </div>
          <h3></h3>
          <div class="form group">
            <input type="email" class="form-control" name="email" placeholder="Email" value="{{mail}}" required="true"> 
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Contraseña" value="{{password}}" required="true">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirmar Contraseña"
              value="{{confirm_password}}" required="true">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="secretWord" placeholder="Palabra secreta"
              value="{{secretword}}" required="true">
          </div>
          <button class="btn btn-primary btn-block">
            Registrarse
          </button>
        </form>
      </div>
    </div>
  </div>
</div>