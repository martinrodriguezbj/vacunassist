<h2>
  <center>Solicitudes de turnos</center>

</h2>
{{#if turnos}}
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Paciente</th>
      <th scope="col">DNI</th>
      <th scope="col">Vacuna</th>
      <th scope="col">Fecha Asignada</th>
      {{!-- <th scope="col">Asignar turno</th>
      <th scope="col">Obtener turno</th> --}}
      <th scope="col">Notificar turno</th>
    </tr>
  </thead>
  <tbody>
    {{#each turnos}}
    <tr>
      <th>{{usuario.name}}, {{usuario.surname}}</th>
      <th>{{usuario.dni}}</th>
      <th>{{vaccineName}}</th>
      {{#if orderDate}}
      <th>{{orderDate}}</th>
      {{else}}

      {{#if usuario.riesgo}}
      {{!-- O IF + 60 --}}
      <th>
        <form action="/turns/solicitudes-turnos/asignar/{{_id}}" method="POST">
        <input type="hidden" name="_method" value="PUT">
          <input type="date" min="2022-06-28" max="2022-07-07" name="date" required="true">
          <button type="submit">
            asignar Turno
          </button>
        </form>
      </th>
      {{else}}
      <th>
        <form action="/turns/solicitudes-turnos/sugerir/{{_id}}" method="POST">
        <input type="hidden" name="_method" value="PUT">
          <input type="date" min="2022-06-28" max="2022-12-28" name="date" required="true">
          <button type="submit">
            asignar Turno
          </button>
        </form>
      </th>
      {{/if}}
      {{/if}}

      {{#if orderDate}}
      {{#if notified}}
      <th>
        Turno notificado
        </button>
        </form>
      </th>
      {{else}}
      <th>
        <form action="/turns/send-email/{{_id}}" method="POST">
          <input type="hidden" name="_method" value="PUT">
          <button type="submit">
            notificar turno
          </button>
        </form>
      </th>
      {{/if}}
      {{/if}}
    </tr>
    {{/each}}
    {{else}}
    <center>
      <h1>No hay turnos para mostrar</h1>
    </center>
    {{/if}}
    </tr>


  </tbody>
</table>